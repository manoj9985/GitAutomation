package stepDefinition;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.Keys;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
// import org.testng.Assert; // Optional if you're using assertions

import io.cucumber.java.en.And;
import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;

public class stepDefinitionScenarios {

	static WebDriver driver;

	@Given("I landed on Ecommerce Page")
	public void i_landed_on_ecommerce_page() throws InterruptedException {
		driver = new ChromeDriver();
		driver.get("https://rahulshettyacademy.com/locatorspractice/");
		driver.manage().window().maximize();
		System.out.println("Page Title: " + driver.getTitle());
		Thread.sleep(2000);
	}

	@Given("^Logged in with Username and Password$")
	public void logged_in_with_username_and_password() throws InterruptedException {
		driver.findElement(By.id("inputUsername")).sendKeys("Manoj");
		driver.findElement(By.xpath("//input[@name='inputPassword']")).sendKeys("rahulshettyacademy.");
		driver.findElement(By.xpath("//button[@class='submit signInBtn']")).click();
		System.out.println("After Login: " + driver.getTitle());
	}

	@When("^I added product to the cart$")
	public void i_added_product_to_the_cart() throws InterruptedException {
		driver.get("https://www.google.com/");
		Thread.sleep(2000);

		WebElement searchBox = driver.findElement(By.name("q"));
		searchBox.sendKeys("rahul shetty login page" + Keys.ENTER);
		Thread.sleep(3000);

		driver.findElement(By.xpath("//h3[contains(text(),\"Let's Shop\")]")).click();
		Thread.sleep(2000);

		driver.findElement(By.id("userEmail")).sendKeys("dihamoj266@gotemv.com");
		driver.findElement(By.id("userPassword")).sendKeys("M@noj998504");
		driver.findElement(By.id("login")).click();
		Thread.sleep(2000);

		driver.findElement(By.xpath("(//button[@class='btn w-10 rounded'][normalize-space()='Add To Cart'])[1]")).click();
		driver.findElement(By.xpath("//button[@routerlink='/dashboard/cart']")).click();
	}

	@And("^Checkout and submit the order$")
	public void checkout_and_submit_the_order() throws InterruptedException {
		System.out.println("Cart Page Title: " + driver.getTitle());
		Thread.sleep(2000);

		boolean isProductDisplayed = driver.findElement(By.cssSelector("div.cartSection h3")).isDisplayed();
		System.out.println("Product displayed in cart: " + isProductDisplayed);
		// Assert.assertTrue(isProductDisplayed);

		driver.findElement(By.xpath("//button[contains(text(),'Checkout')]")).click();
		Thread.sleep(2000);

		driver.findElement(By.xpath("//input[contains(@placeholder, 'Select Country')]")).sendKeys("India");
		Thread.sleep(2000);

		try {
			driver.findElement(By.xpath("(//button[@type='button'])[2]")).click();
		} catch (Exception e) {
			System.out.println("Location suggestion click skipped due to exception: " + e.getMessage());
		}

		driver.findElement(By.xpath("//a[contains(@class,'btnn action__submit ng-star-inserted')]")).click();
		Thread.sleep(2000);
	}

	@Then("^message id displayed in confirmation page$")
	public void message_is_displayed_in_confirmation_page() {
		boolean isMessageDisplayed = driver.findElement(By.cssSelector(".hero-primary")).isDisplayed();
		System.out.println("Confirmation message displayed: " + isMessageDisplayed);
		// Assert.assertTrue(isMessageDisplayed);
	}
}
